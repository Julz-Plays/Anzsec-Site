<section id="hero" class="relative h-screen w-full overflow-hidden font-mono">
  <!-- Background video -->
  <video
    autoplay
    muted
    loop
    playsinline
    disablepictureinpicture = true
    class="absolute inset-0 w-full h-full object-cover z-0"
  >
    <source src="/anzsectrailer.mp4" type="video/mp4" />
  </video>

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/60 z-10"></div>

  <!-- Typewriter container -->
  <div
    class="absolute inset-0 z-20 flex flex-col items-center justify-center px-6"
  >
    <div
      id="typing-terminal"
      class="text-white text-left text-base font-mono sm:text-xl md:text-1xl max-w-2xl w-full whitespace-pre-wrap leading-snug mx-auto px-4"
    >
    </div>
  </div>

  <script is:inline>
    const lines = [
      `ANZSEC`,
      "Built by the Community.",
      "Founded 2022",
      " ",
      "ANZSEC (Formerly ASEC) An Australian-based gaming community aiming to a create realistic, player-driven, multifaceted milsim experience. Powered by talented leadership and mission-making team, making the ANZSEC experience second to none.",
    ];

    const terminal = document.getElementById("typing-terminal");
    let lineIndex = 0;
    let charIndex = 0;
    let currentLineElem = null;

    function typeLine() {
      if (lineIndex >= lines.length) {
        addBlinkingCursor();
        return;
      }

      const currentLine = lines[lineIndex];

      if (charIndex === 0) {
        currentLineElem = document.createElement("div");
        terminal.appendChild(currentLineElem);
      }

      if (charIndex < currentLine.length) {
        const char = currentLine[charIndex];
        currentLineElem.appendChild(document.createTextNode(char));
        charIndex++;
        setTimeout(typeLine, 17);
      } else {
        lineIndex++;
        charIndex = 0;
        setTimeout(typeLine, 400);
      }
    }

    function addBlinkingCursor() {
      const cursor = document.createElement("span");
      cursor.classList.add("blinking-cursor");
      cursor.textContent = "_";
      if (currentLineElem) currentLineElem.appendChild(cursor);
    }

    window.addEventListener("DOMContentLoaded", typeLine);
  </script>

  <style is:global>
    .blinking-cursor {
      display: inline-block;
      margin-left: 4px;
      animation: blink 1s steps(1) infinite;
    }

    @keyframes blink {
      50% {
        opacity: 0;
      }
    }
  </style>
</section>
