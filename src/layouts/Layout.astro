import "../styles/global.css";
---

<!doctype html>
<html lang="en" class="bg-black text-white scroll-smooth">
  <head>
    <!-- Basic Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ANZSEC | Arma 3 Milsim Unit</title>
    <meta name="description" content="ANZSEC is a modern Arma 3 Milsim unit based on the Australian Defence Force. Join immersive weekly operations and become part of our tight-knit, realistic milsim community.">
    <meta name="keywords" content="arma 3, milsim, australian milsim, anzac, ANZSEC, arma unit, arma operations, tactical gaming, arma 3 realism, arma military">
    <meta name="author" content="Khye Booth" />

    <!-- Robots & Caching -->
    <meta name="robots" content="index, follow" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta property="og:title" content="ANZSEC | Arma 3 Milsim Unit" />
    <meta property="og:description" content="ANZSEC is a modern Arma 3 Milsim unit based on the Australian Defence Force. Join immersive weekly operations and become part of our tight-knit, realistic milsim community." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://anzsec.com" /> <!-- Change to our domain -->
    <meta property="og:image" content="https://anzsec.com/og-image.png" /> <!-- Custom preview image -->

    <!-- Favicon (recommended) -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://anzsec.com" /> <!-- Replace with our domain -->

    <!-- SEO Region/Language -->
    <meta name="geo.region" content="AU" />
    <meta name="language" content="en" />
  </head>

  <body class="min-h-screen antialiased">
    <slot />
  </body>
</html>